{
    "name": "code-leaf/wp-builder",
    "description": "CLI tool for building and deploying WordPress plugins and themes",
    "type": "library",
    "authors": [
        {
            "name": "Code Leaf",
            "email": "marco@code-leaf.de"
        }
    ],
    "require": {
      "php": ">=7.4",
      "jenssegers/blade": "^1.4",
      "ext-json": "*",
      "myclabs/php-enum": "^1.8",
      "opis/json-schema": "^1.0"
    },
  "scripts": {
    "analyse": "./vendor/bin/phpstan analyse --memory-limit=-1 -c phpstan.neon"
  },
  "autoload": {
    "psr-4": {
      "WPBuilder\\": "./src/WPBuilder"
    }
  },
    "require-dev": {
        "clue/phar-composer": "^1.2",
        "phpstan/phpstan": "^0.12.94"
    }
}
