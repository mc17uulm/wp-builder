{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{3}$"
    },
    "type": {
      "type": "string"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": ["name", "email"],
      "additionalProperties": false
    },
    "build": {
      "type": "object",
      "properties": {
        "includes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["includes"],
      "additionalProperties": false
    }
  },
  "required": ["name", "slug", "version"],
  "additionalProperties": false
}